@charset "UTF-8";
html, body, .wrap {
	height: 100%;
}
.dgf-main .swiper-container {
	height: 14rem;
}
.swiper-slide img {
	width: 100%;
	height: 100%;
}
.swiper-pagination-bullet {
	width: 0.41rem;
	height: 0.41rem;
}
.swiper-pagination-bullet-active {
	background: #464646;
}
.index-nav {
	padding: 0.25rem 0 0 6.09%;
}
.index-nav a {
	float: left;
	width: 20.63%;
	height: 1.25rem;
	margin: 1.88rem 4.16% 0 0;
	padding-top: 5.63rem;
	font-size: 1.08rem;
	text-align: center;
}
.index-nav .nav1 {
	background: url("../images/nav1.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav2 {
	background: url("../images/nav2.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav3 {
	background: url("../images/nav3.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav4 {
	background: url("../images/nav4.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav5 {
	background: url("../images/nav5.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav6 {
	background: url("../images/nav6.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav7 {
	background: url("../images/nav7.png") no-repeat;
	background-size: 100%;
}
.index-nav .nav8 {
	background: url("../images/nav8.png") no-repeat;
	background-size: 100%;
}
@media screen and (max-height: 480px) {
	.dgf-main .swiper-container {
		height: 13rem;
	}
	.index-nav a {
		margin: 1rem 4.16% 0 0;
	}
}
.pannel, 
.dgf-main {
	position: absolute;
	top: 0;
	width: 100%;
}
.dgf-main {
	left: 0;
}
.pannel {
	width: 80%;
	height: 100%;
	left: -100%;
	padding-left: 20%;
	background: #303031;
}
.pannel dl {
	padding: 2.38rem 0 3.08rem 10.94%;
	box-shadow: 0 1px 0 0 #404041;
}
.pannel dt {
	float: left;
	width: 36.42%;
	height: 6.92rem;
}
.pannel dt img {
	width: 100%;
	height: 100%;
}
.pannel dd {
	float: left;
	width: ;
	padding: 1.2rem 0 0 8.33%;
	color: #c6c6c6;
}
.pannel dd h2 a {
	color: #c6c6c6;
	font-size: 2.58rem;
}
.pannel dd h3 {
	padding-left: 19.67%;
	background: url("../images/coord.png") 0 center no-repeat;
	background-size: 13.59%;
}
.pannel ul a {
	display: block;
	height: 3.75rem;
	padding-left: 10.54%;
	line-height: 3.75rem;
	color: #c6c6c6;
	font-size: 1.33rem;
	background: url("../images/turn_right.png") 88.88% center no-repeat;
	background-size: 3.91%;
	box-shadow: 0 1px 0 0 #404041;
}
